@import "fonts/roboto.css"

$robotoFamily = "Roboto"
$fontNormal = normal
$fontThin = 100
$fontMedium = 500

body
    background-color: #fafafa
    font-family: $robotoFamily
    font-weight: $fontNormal

input::-webkit-input-placeholder
    color: #999999

input:-moz-placeholder
    color: #999999
//Modals
.fancybox-close
    width: 16px
    height: 16px
    background-image: none
    color: #ffffff
    font-size: 20px
    top: -20px
    right: -18px
    &:hover,
    &:active,
    &:focus
        outline: none
        color: #cccccc

.fancybox-skin
    border-radius: 0

.fancybox-inner
    height: auto !important

.modals
    &.modals-lead-info
        width: 450px
        h2
            margin: 10px 0 20px
            font-family: $robotoFamily
            font-weight: $fontThin
            color: #666666
            font-size: 24px
        .modals-body
            color: #555555
            font-family: $robotoFamily
            .modals-p
                font-weight: $fontNormal
                font-size: 18px
            .modals-labels
                font-weight: $fontMedium
                font-size: 18px

.modals-error
    display: inline-block
    margin: 0
    height: 100%;
    border-radius: 4px
    width: 360px
    h2
        display: inline-block
        margin: 20px
        font-family: $robotoFamily
        font-weight: $fontMedium
        font-size: 16px

.navbar-default
    background-color: #212121
    border: none
    box-shadow: 0px 3px 6px rgba(0,0,0,0.3)
    .navbar-brand
        height: auto
        color: #ffffff
        &:hover,
        &:focus,
        &:active
            color: #ffffff
            background-color: rgba(255,255,255,0.1)
            border-bottom: 4px solid transparent
    .navbar-nav
        >li
            >a
                color: #ffffff
                &:hover,
                &:focus,
                &:active
                    color: #ffffff
                    background-color: rgba(255,255,255,0.1)
                    border-bottom: 4px solid transparent
    .navbar-right
        >li
            >a
                border-bottom: 4px solid #dd2828
                &:hover,
                &:focus,
                &:active
                    color: #ffffff
                    background-color: rgba(255,255,255,0.1)
                    border-color: #dd2828 !important
                span
                    &:hover,
                    &:focus,
                    &:active
                        border-bottom: 1px dashed #cccccc
    .navbar-nav
        &>.open
            >a
                color: #ffffff !important
                background-color: rgba(255,255,255,0.1) !important
                border-color: #dd2828 !important
//Register and Auth
.register
    h1
        margin-bottom: 30px
        font-family: $robotoFamily
        font-weight: $fontThin
        color: #666666
        text-align: center
    .register-form
        padding: 30px 0px
        background-color: #ffffff
        box-shadow: 0px 0px 12px rgba(0,0,0,0.6)
        .form-head
            padding: 0px 25px 15px 25px
            font-family: $robotoFamily
            font-weight: $fontNormal
            font-size: 22px
            color: #666666
            border-bottom: 1px solid #cccccc
        .form-body
            padding: 10px 40px 10px 40px
            input
                display: block
                width: 100%
                margin: 0 auto 10px auto;
                padding: 5px 0px
                border: none
                outline: none
                border-bottom: 1px dashed #999999
                font-family: $robotoFamily
                font-weight: $fontNormal
                font-size: 18px
                color: #666666
            input[name='ogrn'],
            input[name='inn']
                display: inline-block
                width: 49%
                margin: 0px 10px 10px 0px
        .form-footer
            text-align: center
            input[type='submit']
                display: inline-block
                border: none
                margin: 15px auto
                padding: 15px 30px
                color: #ffffff
                outline: none
                background-color: #64dd17
                font-family: $robotoFamily
                font-weight: $fontMedium
                font-size: 16px
                &:hover,
                &:focus,
                &:active
                    background-color: #76ff03
                    box-shadow: 0px 6px 14px rgba(0,0,0,0.3)
.register-lead
    h1
        @extends .register h1
    .register-form
        @extends .register .register-form

.login
    h1
        @extends .register h1
    .login-form
        margin: 0 auto
        padding: 0
        background-color: #ffffff
        box-shadow: 0px 0px 12px rgba(0,0,0,0.6)
        .form-head
            margin-bottom: 20px
            border-bottom: 1px solid #cccccc
            font-size: 0
            .tab-login
                display: inline-block
                width: 50%
                margin: 0
                padding: 15px 0px
                font-family: $robotoFamily
                font-weight: $fontNormal
                text-align: center
                font-size: 20px
                color: #666666
                cursor: pointer
                &:first-of-type
                    border-right: 1px solid #cccccc;
                &.active
                    box-shadow: inset 0px 0px 20px rgba(0, 0, 0, 0.25)
        .form-body
            .row
                margin-bottom: 25px
                label
                    line-height: 28px
                    font-family: $robotoFamily
                    font-weight: $fontMedium
                    font-size: 16px
                input
                    width: 100%
                    text-align: center
                    border: none
                    outline: none
                    border-bottom: 1px dashed #999999
                    color: #666666
                    &:focus
                        border-bottom-color: #76ff03
        .form-footer
            input
                display: block
                width: 100%
                border: none
                margin: 15px auto 0px
                padding: 15px 30px
                color: #ffffff
                outline: none
                background-color: #64dd17
                font-family: $robotoFamily
                font-weight: $fontMedium
                font-size: 16px
                &:hover,
                &:focus,
                &:active
                    background-color: #76ff03
                    box-shadow: 0px 6px 14px rgba(0,0,0,0.3)
            a
                padding: 0px
                margin: 6px 0px
                line-height: normal
                font-family: $robotoFamily
                font-weight: $fontNormal
                &:hover
                &:focus,
                &:active
                    text-decoration: none
                    border-bottom: 1px dashed #76ff03
//Company dashboard
.dashboard-company
    h1
        @extends .register h1
    .control-panel
        .wrapper
            padding: 15px 0px
            box-shadow: 0px 0px 8px rgba(0,0,0,0.6)
            ul
                list-style: none
                margin: 0
                padding: 0
                li
                    a
                        padding: 5px 20px
                        display: block
                        font-family: $robotoFamily
                        font-weight: $fontNormal
                        font-size: 18px
                        color: #2f2f2f
                        &.current
                            padding-left: 12px
                            border-left: 8px solid #dd2828
                        &:hover,
                        &:focus,
                        &:active
                            background-color: rgba(0, 0, 0, 0.07);
                            text-decoration: none
                ul
                    li
                        cursor: pointer
                        a
                            padding-left: 40px
                            &.current
                                padding-left: 32px

    .body-panel
        .wrapper
            @extends .dashboard-company .control-panel .wrapper
            margin-right: -15px
            padding-top: 0
            .lead-head
                padding: 10px 20px
                font-family: $robotoFamily
                font-weight: $fontMedium
                font-size: 20px
                color: #666666
                border-bottom: 1px solid #cccccc
                p
                    margin: 0
            .row-leads
                overflow: hidden
                .cart-left
                    padding-right: 0
                    img
                        border-bottom: 1px solid #cccccc
                .cart-right
                    padding-left: 0
                    .cart-lead-head
                        p
                            padding: 15px 15px
                            font-family: $robotoFamily
                            font-weight: $fontNormal
                            font-size: 20px
                            color: #323232
                    .cart-lead-body
                        height: 114px
                        max-height: 114px
                        p
                            font-family: $robotoFamily
                            font-weight: $fontNormal
                            font-size: 16px
                            color: #555555
                        .cart-lead-attribute
                            margin: 0
                            i
                                margin-right: 5px
                                color: #555555
                            span
                                font-size: 14px
                                color: #333333
                    .cart-lead-footer
                        border-bottom: 1px solid #cccccc
                        .pay_lead
                            a
                                margin-bottom: 14px
                                display: inline-block
                                padding: 8px 20px
                                outline: none
                                border: none
                                font-family: $robotoFamily
                                font-weight: $fontNormal
                                font-size: 15px
                                color: #ffffff
                                box-shadow: 0px 0px 6px rgba(0,0,0,0.4)
                                &:focus,
                                &:hover,
                                &:active
                                    text-decoration: none;
                                    box-shadow: 0px 4px 12px rgba(0,0,0,0.4)
                            .cart-link-btn
                                background-color: #64dd17;
                            .cart-info-btn
                                background-color: #3bafda;
                        .not_pay_lead
                            button
                                margin-bottom: 14px
                                display: inline-block
                                padding: 8px 20px
                                outline: none
                                border: none
                                background-color: #3bafda;
                                font-family: $robotoFamily
                                font-weight: $fontNormal
                                font-size: 15px
                                color: #ffffff
                                box-shadow: 0px 0px 6px rgba(0,0,0,0.4)
                                &:focus,
                                &:hover,
                                &:active
                                    box-shadow: 0px 4px 12px rgba(0,0,0,0.4)

//Company settings
.settings-company
    h1
        @extends .register h1
    .control-panel
        .wrapper
            @extends .dashboard-company .control-panel .wrapper
    .body-panel
        .wrapper
            @extends .dashboard-company .control-panel .wrapper
            padding: 0
            margin-right: -15px
            .setting-head
                padding: 10px 20px
                font-family: $robotoFamily
                font-weight: $fontMedium
                font-size: 20px
                color: #666666
                p
                    margin: 0
                &:first-of-type
                    border-bottom: 1px solid #cccccc
            .settings-row
                .logo
                    text-align: center
                    p
                        margin: 0
                        padding: 20px 0px 5px
                        font-family: $robotoFamily
                        font-weight: $fontNormal
                        font-size: 16px
                    img
                        display: inline-block
                        width: 80%
                        margin-bottom: 20px
                .setting-body
                    padding: 20px 0px 5px
                    border-bottom: 1px solid #cccccc
                    .form-group
                        padding: 0px 0px 0px 20px
                        margin-bottom: 5px
                        label
                            padding: 0
                            margin: 0
                            color: #555555
                            font-family: $robotoFamily
                            font-weight: $fontNormal
                            font-size: 16px
                        input
                            outline: none
                            border: none
                            border-bottom: 1px dashed #555555
                            background-color: transparent
                            text-overflow: ellipsis
                            color: #555555
                            font-family: $robotoFamily
                            font-weight: $fontNormal
                            font-size: 16px
                            &:focus
                                border-bottom: 1px solid #64dd17
                        input[readonly]
                            border: none
                        button
                            margin-bottom: 20px;
                            outline: none
                            padding: 0
                            background-color: transparent
                            color: #555555
                            font-family: $robotoFamily
                            font-weight: $fontNormal
                            font-size: 16px
                            border: none
                            border-bottom: 1px dashed #555555
                            i
                                margin-right: 5px
                            &:hover,
                            &:focus,
                            &:active
                                border-color: transparent
                        .password
                            min-width: 20%
                            line-height: 35px
                    &:last-of-type
                        border: none
                .password-form
                    .setting-body
                        .form-group
                            button
                                display: inline-block
                                border: none
                                margin: 15px auto 0px
                                padding: 8px 34px
                                color: #ffffff
                                outline: none
                                background-color: #64dd17
                                font-family: $robotoFamily
                                font-weight: $fontMedium
                                font-size: 16px
                                &:hover,
                                &:focus,
                                &:active
                                    background-color: #76ff03
                                    box-shadow: 0px 6px 14px rgba(0,0,0,0.3)
            .border-setting
                content: " ";
                border-bottom: 1px solid #cccccc

.debit-company
    h1
        @extends .register h1
    .control-panel
        .wrapper
            @extends .dashboard-company .control-panel .wrapper
    .body-panel
        .wrapper
            @extends .dashboard-company .control-panel .wrapper
            padding: 0
            margin-right: -15px
            .debit-panel-head
                padding: 10px 5px
                font-family: $robotoFamily
                font-weight: $fontMedium
                font-size: 20px
                color: #555555
                p
                    margin: 0
            .debit-panel-body
                padding: 0px 5px
                p
                    margin-bottom: 20px
                    font-family: $robotoFamily
                    font-weight: $fontNormal
                    font-size: 16px
                .add-debit-form
                    input[type="text"]
                        display: inline-block
                        padding: 4px 0px
                        text-align: center
                        margin-right: 4px
                        width: 140px
                        outline: none
                        border: none
                        border-bottom: 1px dashed #555555
                        background-color: transparent
                        text-overflow: ellipsis
                        color: #555555
                        font-family: $robotoFamily
                        font-weight: $fontNormal
                        font-size: 18px
                        &:focus
                            border-bottom: 1px solid #64dd17
                    input[type="button"]
                        display: inline-block
                        border: none
                        border-radius: 0
                        padding: 6px 30px
                        color: #ffffff
                        outline: none
                        background-color: #64dd17
                        font-family: $robotoFamily
                        font-weight: $fontMedium
                        font-size: 14px
                        box-shadow: 0px 0px 6px rgba(0,0,0,0.4)
                        &:hover,
                        &:focus,
                        &:active
                            background-color: #76ff03
                            box-shadow: 0px 4px 12px rgba(0,0,0,0.4)
                    span
                        display: inline-block
                        color: #555555
                        font-family: $robotoFamily
                        font-weight: $fontNormal
                        font-size: 16px

//Lead dashboard
.dashboard-lead
    h1
        @extends .register h1
    .lead-row
        padding-bottom: 40px
        .body-panel
            @extends .dashboard-company .control-panel .wrapper
            padding: 0
            .lead-head
                p
                    padding: 20px 20px
                    font-family: $robotoFamily
                    font-weight: $fontNormal
                    font-size: 24px
                    color: #666666
            .lead-body
                padding: 0 5px
                p
                    display: inline-block
                    font-family: $robotoFamily
                    font-weight: $fontNormal
                    font-size: 16px
                    color: #323232
                .cart-lead-attribute
                    margin: 0
                    i
                        margin-right: 5px
                        color: #555555
                    span
                        font-size: 14px
                        color: #323232
            .lead-footer
                padding: 15px 5px 20px 5px
                .left-footer
                    p
                        color: #323232
                        line-height: normal
                        font-family: $robotoFamily
                        font-weight: $fontNormal
                        &.p-name
                            font-size: 18px
                        &.p-value
                            font-size: 16px
            .lead-bid-head
                p
                    @extends .dashboard-lead .lead-row .body-panel .lead-head p
                    padding-bottom: 0px
                    padding-top: 10px
                    font-size: 18px
                &.company
                    border-bottom: 1px solid #cccccc
            .lead-bid-body
                .table-bid
                    margin-bottom: 0
                    th,
                    td
                        padding: 10px 20px
                        font-family: $robotoFamily
                        font-weight: $fontNormal
                        font-size: 14px
                        vertical-align: middle
                        p
                            margin: 0
                            display: inline
                    td
                        padding: 15px 20px
                        button
                            display: inline-block
                            border: none
                            border-radius: 0
                            padding: 6px 30px
                            color: #ffffff
                            outline: none
                            background-color: #64dd17
                            font-family: $robotoFamily
                            font-weight: $fontMedium
                            font-size: 16px
                            box-shadow: 0px 0px 6px rgba(0,0,0,0.4)
                            &:hover,
                            &:focus,
                            &:active
                                background-color: #76ff03
                                box-shadow: 0px 4px 12px rgba(0,0,0,0.4)
                .add-bid-form
                    &.company
                        padding: 20px
                        input
                            display: block
                            padding: 4px 0px
                            text-align: center
                            margin-bottom: 10px
                            outline: none
                            border: none
                            border-bottom: 1px dashed #555555
                            background-color: transparent
                            text-overflow: ellipsis
                            color: #555555
                            font-family: $robotoFamily
                            font-weight: $fontNormal
                            font-size: 18px
                            &:focus
                                border-bottom: 1px solid #64dd17
                        textarea
                            display: block
                            margin-bottom: 10px
                            padding: 6px 3px
                            outline: none
                            border: 1px dashed #555555
                            background-color: transparent
                            color: #555555
                            font-family: $robotoFamily
                            font-weight: $fontNormal
                            font-size: 18px
                            &:focus
                                border: 1px solid #64dd17
                        input[type="submit"]
                            display: inline-block
                            border: none
                            border-radius: 0
                            padding: 6px 30px
                            color: #ffffff
                            outline: none
                            background-color: #64dd17
                            font-family: $robotoFamily
                            font-weight: $fontMedium
                            font-size: 14px
                            box-shadow: 0px 0px 6px rgba(0,0,0,0.4)
                            &:hover,
                            &:focus,
                            &:active
                                background-color: #76ff03
                                box-shadow: 0px 4px 12px rgba(0,0,0,0.4)

@import "media.css"
